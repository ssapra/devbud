%section#contact.home-section.bg-white
  .container
    .row
      .col-md-offset-2.col-md-8
        .section-heading
          %h2 Sign up

    .row
      .col-md-offset-1.col-md-10
        =form_for @student, html: {class: "form-horizontal"} do |f|
          .form-group
            .col-md-offset-2.col-md-8
              =f.text_field :first_name, placeholder: "First Name", class: "form-control"
          .form-group
            .col-md-offset-2.col-md-8
              =f.text_field :last_name, placeholder: "Last Name", class: "form-control"
          .form-group
            .col-md-offset-2.col-md-8
              =f.text_field :email, placeholder: "Email", class: "form-control"
          .form-group
            .col-md-offset-2.col-md-8
              =f.password_field :password, placeholder: "Password", class: "form-control"
          .form-group
            .col-md-offset-2.col-md-8
              =f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control"
          .form-group
            .col-md-offset-2.col-md-8
              =f.submit "Submit", class: "btn btn-theme btn-lg btn-block"

